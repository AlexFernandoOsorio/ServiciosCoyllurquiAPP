<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ServiciosCoyllurquiAPP" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/colorbackground</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

    </style>


    <style name="Theme.ServiciosCoyllurquiAPP.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ServiciosCoyllurquiAPP.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ServiciosCoyllurquiAPP.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Estilos agregados -->
    <style name="Buttonlogin" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#e57373</item>
        <item name="colorButtonNormal">@color/colorloginbox</item>
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="styles_textimp" parent="Theme.AppCompat.Light">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/colorbluelight</item>
        <item name="android:textSize">16sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorlogintext</item>
        <item name="colorControlNormal">@color/colorloginbox</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>
    <style name="styles_textimp2" parent="Theme.AppCompat.Light">
        <!-- Hint color and label color in FALSE state -->
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorbluelight</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">#FFFFFF</item>
    </style>

    <style name="ButtonCat" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#e57373</item>
        <item name="colorButtonNormal">#7986CB</item>
    </style>

    <style name="MyRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorradiobn</item>
        <item name="colorControlActivated">@color/colorradioba</item>
    </style>
    <style name="MyRadioButtona" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorcheckverde</item>
        <item name="colorControlActivated">@color/colorcheckverde</item>
    </style>
    <style name="MyRadioButtonm" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorcheckamarillo</item>
        <item name="colorControlActivated">@color/colorcheckamarillo</item>
    </style>
    <style name="MyRadioButtone" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorcheckrojo</item>
        <item name="colorControlActivated">@color/colorcheckrojo</item>
    </style>
    <style name="MyCheckBoxv" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorcheckverde</item>
        <item name="colorControlActivated">@color/colorcheckverde</item>
    </style>
    <style name="MyCheckBoxa" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorcheckamarillo</item>
        <item name="colorControlActivated">@color/colorcheckamarillo</item>
    </style>
    <style name="MyCheckBoxr" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorcheckrojo</item>
        <item name="colorControlActivated">@color/colorcheckrojo</item>
    </style>

    <style name="MBA" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorcheckindigo</item>
        <item name="colorButtonNormal">@color/colorcheckverde</item>
    </style>
    <style name="MBM" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorcheckindigo</item>
        <item name="colorButtonNormal">@color/colortexthint</item>
    </style>
    <style name="MBE" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorcheckindigo</item>
        <item name="colorButtonNormal">@color/colorcheckrojo</item>
    </style>
    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/colorsolicite</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#bdbdbd</item>
    </style>
</resources>