<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorwhite">
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorbuttonregistro">
        <ImageView
            android:src="@drawable/ic_libroconfirm"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:scaleType="center"
            android:layout_gravity="center" />
        <TextView
            android:id="@+id/dialog_mensajeup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dialog_libroconfirm"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="#FFFFFF"/>
    </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:textSize="17dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:hint="Eliga su tipo de  Petición :" />
    <RadioButton
        android:id="@+id/radio_peticiontiempo"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:checked="false"
        android:layout_marginLeft="15dp"
        android:text="Petición por un tiempo"
        android:theme="@style/MyRadioButtona"/>
    <RadioButton
        android:id="@+id/radio_peticiondonacion"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:checked="false"
        android:text="Donación de este libro"
        android:theme="@style/MyRadioButtonm"/>
    <RadioButton
        android:id="@+id/radio_peticionventa"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:checked="false"
        android:text="Comprar este libro"
        android:theme="@style/MyRadioButtone"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/boder_rect">
            <Spinner
                android:id="@+id/spinnerdias"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <EditText
            android:id="@+id/txt_peticionnota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Escriba una nota"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:id="@+id/txt_peticionmensaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Escriba un mensaje de compra"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:background="@color/colorwhite"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3">

        </LinearLayout>
        <Button
            android:id="@+id/btn_peticionno"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Cancelar"
            android:textColor="@color/colorsolicitan"
            android:textStyle="bold"
            android:background="@color/colorwhite"/>
        <Button
            android:id="@+id/btn_peticionyes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Confirmar"
            android:gravity="center"
            android:textColor="@color/colorsolicitan"
            android:textStyle="bold"
            android:background="@color/colorwhite"/>

    </LinearLayout>
</LinearLayout>